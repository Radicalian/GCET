<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#585858">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#585858">


<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/courses1"
    android:background="#ffffff"/>
        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/mb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_gravity="center"
            app:button_icon="@drawable/ic1"
            app:button_icon_height="45dp"
            app:button_icon_width="45dp"
            app:expandable_area_color="#049c11"
            app:hide_text="Free Courses"
       android:layout_marginTop="70dp"
            app:hide_text_color="#ffffff"
            app:hide_text_size="8dp"
            app:icon_button_color="#FF06BA16"

            app:magic_button_size="70dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/mb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:magic_button_size="70dp"
            app:button_icon="@drawable/ic2"

            app:button_icon_width="45dp"
            app:button_icon_height="45dp"
            app:hide_text="Certification/\nPaid Courses"
            app:hide_text_size="8dp"
            android:layout_gravity="center"
            app:hide_text_color="#ffffff"
            app:icon_button_color="#FF06BA16"
            app:expandable_area_color="#049c11"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/mb4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/app"
            android:textSize="18sp"
            android:textColor="#FF06BA16"
            android:textStyle="bold"
            android:background="#585858"
            android:onClick="onClick"
            android:layout_gravity="center"
            />
        </LinearLayout>

</ScrollView>